model User{
  id         String @id @map("_id")
  name       String
  phone      String 
  email      String 
  password   String
  created_at DateTime @default(now()) 
  updated_at DateTime @updatedAt
  user_type  UserType
  homes      Home[]
  buyer_messages  Message[] @relation("buyer_messages")
  realtor_message Message[] @relation("realtor_messages")
}

model Home {
  id        String @id @map("_id")
  address   String
  number_of_bedrooms Int
  number_of_bathrooms Float
  city      String
  listed_date DateTime @default(now())
  price     Float
  land_size Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  propertyType PropertyType
  realtor_id   String 
  realtor      User @relation(fields: [realtor_id], references: [id])
  message Message[]
  images Image[]
}

model Image {
  id String @id @map("_id")
  url  String
  create_at DateTime @default(now())
  updated_at DateTime @updatedAt
  home_id String
  home Home @relation(fields: [home_id], references: [id])
}

model Message {
  id String @id @map("_id")
  message String  
  home_id  String
  home Home @relation(fields: [home_id], references: [id])
  realtor_id String 
  realtor User @relation("realtor_messages", fields: [realtor_id], references: [id])
  buyer_id String
  buyer User @relation("buyer_messages", fields: [buyer_id], references: [id])

}

enum PropertyType {
  RESIDENTIAL
  CONDO
}


enum UserType {
  BUYER
  REALTOR
  ADMIN
}

